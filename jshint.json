// tbd. Likely taking this away - Svelte gives the warnings, right?
{
  // See http://jshint.com/docs/options/

  // ES2015
  "esversion": 6,

  //--- Enforcing options (true = strict) ---
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "nocomma": true,
  "nonbsp": true,
  "strict": "global",

  //--- Relaxing options (false = strict) ---
  "asi": true,

  //--- Environments ---
  "globals": {
    "SVG": false,
    "Rx": false
  },
  "browser": true
}
