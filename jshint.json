{
  // See "http://jshint.com/docs/options/",

  // Did not work with jshint 2.8.0. AKa241215
  "esversion": 6,

  //--- Enforcing options (true = strict) ---
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "nocomma": true,
  "nonbsp": true,
  "strict": "global",

  //--- Relaxing options (false = strict) ---
  "asi": true,

  //--- Environments ---
  "globals": {
    "SVG": false,
    "Rx": false
  },
  "browser": true
}
